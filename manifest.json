{
  "author": "Ben Mills",
  "platforms": {
    "macos": {
      "homebrew": {
        "install_steps": [
          {
            "binary": "brew",
            "command": "install elixir",
            "runif": "[ `which elixir` != \"/usr/local/bin/elixir\" ]"
          }
        ]
      },
      "files": [
        {
          "source": "vimbundles/elixir",
          "target": "$HOME/.vimbundles/elixir",
          "operation": "symlink"
        }
      ]
    }
  }
}
